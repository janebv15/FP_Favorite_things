<div>
  <div>
    <h1>
      Follow requests join table #<%= @the_follow_requests_join_table.id %> details
    </h1>

    <div>
      <div>
        <a href="/follow_requests_join_tables">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_follow_requests_join_table/<%= @the_follow_requests_join_table.id %>">
          Delete follow requests join table
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Sender
      </dt>
      <dd>
        <%= @the_follow_requests_join_table.sender_id %>
      </dd>

      <dt>
        Recipient
      </dt>
      <dd>
        <%= @the_follow_requests_join_table.recipient_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_follow_requests_join_table.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_follow_requests_join_table.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit follow requests join table
    </h2>

    <form action="/modify_follow_requests_join_table/<%= @the_follow_requests_join_table.id %>"  method="post" >
      <div>
        <label for="sender_id_box">
          Sender
        </label>

        <input type="text" id="sender_id_box" name="query_sender_id" value="<%= @the_follow_requests_join_table.sender_id %>">
      </div>

      <div>
        <label for="recipient_id_box">
          Recipient
        </label>

        <input type="text" id="recipient_id_box" name="query_recipient_id" value="<%= @the_follow_requests_join_table.recipient_id %>">
      </div>

      <button>
        Update follow requests join table
      </button>
    </form>
  </div>
</div>

<hr>
