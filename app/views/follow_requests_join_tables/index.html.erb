<div>
  <div>
    <h1>
      List of all follow requests join tables
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new follow requests join table
    </h2>

    <form action="/insert_follow_requests_join_table" method="post">
      <div>
        <label for="sender_id_box">
          Sender
        </label>

        <input type="text" id="sender_id_box" name="query_sender_id">
      </div>

      <div>
        <label for="recipient_id_box">
          Recipient
        </label>

        <input type="text" id="recipient_id_box" name="query_recipient_id">
      </div>

      <button>
        Create follow requests join table
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Sender
        </th>

        <th>
          Recipient
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_follow_requests_join_tables.each do |a_follow_requests_join_table| %>
      <tr>
        <td>
          <%= a_follow_requests_join_table.id %>
        </td>

        <td>
          <%= a_follow_requests_join_table.sender_id %>
        </td>

        <td>
          <%= a_follow_requests_join_table.recipient_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_follow_requests_join_table.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_follow_requests_join_table.updated_at) %> ago
        </td>

        <td>
          <a href="/follow_requests_join_tables/<%= a_follow_requests_join_table.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
